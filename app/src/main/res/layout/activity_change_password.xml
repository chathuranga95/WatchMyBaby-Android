<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chathus.watchmybaby.ChangePasswordActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="95dp"
                android:text="Old Password"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtNewPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtOldPass"
                android:layout_below="@+id/txtOldPass"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:inputType="numberPassword" />

            <EditText
                android:id="@+id/txtConfirmNewPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/textView6"
                android:layout_marginEnd="19dp"
                android:ems="10"
                android:inputType="numberPassword" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtNewPass"
                android:layout_alignBottom="@+id/txtNewPass"
                android:layout_alignStart="@+id/textView4"
                android:text="Password"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/txtNewPass"
                android:layout_marginTop="33dp"
                android:text="Confirm \nPassword"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtOldPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView4"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignStart="@+id/txtConfirmNewPass"
                android:ems="10"
                android:inputType="numberPassword"
                tools:layout_editor_absoluteX="133dp"
                tools:layout_editor_absoluteY="76dp" />

            <Button
                android:id="@+id/btnChangePsw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtConfirmNewPass"
                android:layout_below="@+id/txtConfirmNewPass"
                android:layout_marginEnd="13dp"
                android:layout_marginTop="28dp"
                android:background="@android:color/holo_green_dark"
                android:onClick="changePsw"
                android:text="Change"
                android:textColor="#ffffff"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="491dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginTop="16dp"
                android:text="Change Password" />

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
