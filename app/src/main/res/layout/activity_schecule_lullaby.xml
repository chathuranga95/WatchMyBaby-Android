<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chathus.watchmybaby.ScheculeLullabyActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ListView
            android:id="@+id/lstFiles"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lblProgress"
            android:layout_marginTop="21dp"
            android:drawSelectorOnTop="false"
            android:listSelector="@android:color/darker_gray"

            />

        <Button
            android:id="@+id/btnSetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lblProgress"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:text="Set Time"
            android:onClick="setTime"/>

        <ImageButton
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btnAddFromFile"
            android:layout_marginEnd="30dp"
            android:listSelector="@android:color/holo_blue_light"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        <TextView
            android:id="@+id/lblProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAddFromFile"
            android:layout_marginEnd="48dp"
            android:layout_toStartOf="@+id/btnDel"
            android:text="Progress:" />

        <ImageButton
            android:id="@+id/btnAddFromFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lblProgress"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:onClick="chooseFile"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
