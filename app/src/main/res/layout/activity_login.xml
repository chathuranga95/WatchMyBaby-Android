<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chathus.watchmybaby.LoginActivity">
    setTitle("Hello StackOverflow");

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="270dp"
        android:layout_marginBottom="8dp"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        tools:layout_centerVertical="true">


        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtUserName"
            android:layout_alignBottom="@+id/txtUserName"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:text="User Name" />

        <TextView
            android:id="@+id/lblPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lblUserName"
            android:layout_below="@+id/txtUserName"
            android:layout_marginTop="33dp"
            android:text="Password" />

        <EditText
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblPass"
            android:layout_alignBottom="@+id/lblPass"
            android:layout_alignStart="@+id/txtUserName"
            android:ems="10"
            android:inputType="numberPassword" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtPass"
            android:layout_below="@+id/txtPass"
            android:layout_marginTop="31dp"
            android:text="Login"
            android:onClick="Login"/>

        <Button
            android:id="@+id/btnNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtPass"
            android:layout_alignTop="@+id/btnLogin"
            android:text="Sign In"
            android:onClick="signIn"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
